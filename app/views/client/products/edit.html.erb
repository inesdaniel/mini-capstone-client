<%= form_tag "/client/products/#{@product["id"]}", method: :patch do %>
  <div>
    Id: <input type="text" name="input_id" value="<% @product["id"] %>">
  </div>
  <div>
    Name: <input type="text" name="input_name" value="<% @product["name"]%>">
  </div>
  <div>
    Description: <input type="text" name="input_description" value="<% @product["description"]%>">
  </div>
  <div>
    Price: <input type="text" name="input_price" value="<% @product["price"]%>">
  </div>
  <div>
    Image_url: <input type="text" name="input_image_url" value="<% @product["image_url"]%>">
  </div>
  <div>
    <input type="submit" value="Edit a product">
  </div>
<% end %>

<p>Click below to delete this product</p>

<a href="/client/products/<%= @product["id"]%>" data-method="delete">Delete Product</a>