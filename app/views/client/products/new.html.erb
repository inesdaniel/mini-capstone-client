<%= form_tag "/client/products", method: :post do %>
  <div>
    Name: <input type="text" name="input_name">
  </div>
  <div>
    Description: <input type="text" name="input_description">
  </div>
  <div>
    Price: <input type="text" name="input_price">
  </div>
  <div>
    Stocked: <input type="text" name="input_stocked">
  </div>  
  <div>
    Supplier: <input type="text" name="supplier_id">
  </div>
  <div>
    <input type="submit" value="Create a new product">
  </div>
<% end %>